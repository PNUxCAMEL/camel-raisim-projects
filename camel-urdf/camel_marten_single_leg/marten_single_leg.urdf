<?xml version="1.0" ?>

<!-- TODO: inertia should be updated -->
<robot name="marten-single-leg">
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="light_gray">
     <color rgba="0.75 0.75 0.75 1.0"/>
  </material>

  <material name="black1">
      <color rgba="0.25 0.25 0.25 1.0"/>
  </material>

  <material name="black2">
      <color rgba="0.35 0.35 0.35 1.0"/>
  </material>
  <link name="world"/>
  <joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="base"/>
  </joint>

  <link name="base">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <box size="0.025 0.025 1.0"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
        <origin rpy="0 0 0" xyz="0 0 0.5"/>
      <geometry>
        <box size="0.025 0.025 1.0"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="10"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <joint name="linear_guide" type="prismatic">
    <origin rpy="0 0 0" xyz="0 -0.025 0.0"/>
    <parent link="base"/>
    <child link="hip_1"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="hip_1">
      <visual>
        <origin rpy="0 0 1.570796" xyz="0.0 -0.03 0.0"/>
        <geometry>
          <mesh filename="hip.STL" />
        </geometry>
        <material name="black1"/>
      </visual>

      <collision>
        <origin rpy="-1.570796 0 0" xyz="0.0 -0.03 0.0"/>
        <geometry>
          <cylinder length="0.04" radius="0.038"/>
        </geometry>
      </collision>

      <inertial>
        <origin rpy="-1.570796 0 0" xyz="0.0 0 0.0"/>
        <mass value="1.073"/>
        <inertia ixx="0.00016382" ixy="0.0" ixz="0.0" iyy="0.000243955" iyz="0.0" izz="0.00016382"/>
      </inertial>
  </link>

  <joint name="hip_pitch" type="revolute">
    <origin rpy="0 0 0" xyz="0 -0.03 0.0"/>
    <parent link="hip_1"/>
    <child link="hip_2"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <link name="hip_2">

    <inertial>
      <origin rpy="-1.570796 0 0" xyz="0.0 0 0.0"/>
      <mass value="0.337"/>
      <inertia ixx="0.00016382" ixy="0.0" ixz="0.0" iyy="0.000243955" iyz="0.0" izz="0.00016382"/>
    </inertial>
  </link>

  <joint name="hip_upper" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="hip_2"/>
    <child link="upper_leg"/>
  </joint>

  <link name="upper_leg">
    <visual>
      <origin rpy="2.126394 0 1.570796" xyz="0 0 0"/>
      <geometry>
        <mesh filename="thigh.STL" />
      </geometry>
      <material name="black2"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 -0.06 -0.09"/>
      <geometry>
        <box size="0.035 0.04 0.18"/>
      </geometry>
    </collision>

    <inertial>
      <origin rpy="0 0 0" xyz="0 -0.06 -0.09"/>
      <mass value="0.171"/>
      <inertia ixx="0.000493178" ixy="0.0" ixz="0.0" iyy="0.000503253" iyz="0.0" izz="0.0000730313"/>
    </inertial>
  </link>

  <joint name="knee_pitch" type="revolute">
    <origin rpy="0 0 0" xyz="0 -0.065 -0.18"/>
    <parent link="upper_leg"/>
    <child link="lower_leg"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <link name="lower_leg">
    <visual>
      <origin rpy="0.9425 0 1.570796" xyz="0 0.015 0"/>
      <geometry>
        <mesh filename="calf.STL" />
      </geometry>
      <material name="black2"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 -0.18"/>
      <geometry>
        <sphere radius="0.010"/>
      </geometry>
      </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 -0.09"/>
      <mass value="0.171"/>
      <inertia ixx="0.000493178" ixy="0.0" ixz="0.0" iyy="0.000503253" iyz="0.0" izz="0.0000730313"/>
    </inertial>
  </link>
</robot>